* {
  font-family: "Rubik", sans-serif;
}
html {
  font-size: 10px;
}
body {
  background: #fff;
  margin: 0;
  font-family: "Rubik", sans-serif;
  font-size: 1.8rem;
  overflow-x: hidden !important;
}
*,
*::after,
*::before {
  margin: 0;
  padding: 0;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
img {
  max-width: 100%;
}
ul {
  list-style: none;
}
a {
  text-decoration: none;
}
button {
  cursor: pointer;
  border: none;
}
p {
  line-height: 140%;
}
.header {
  padding: 3rem 0;
  position: relative;
}
.header__container {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: justify;
      -ms-flex-pack: justify;
          justify-content: space-between;
}
.header__logo {
  -webkit-box-flex: 0;
      -ms-flex: 0 0 45%;
          flex: 0 0 45%;
}
.header__main {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20px;
  background: #252b46;
  z-index: 10;
  -webkit-clip-path: circle(0% at 100% 0);
          clip-path: circle(0% at 100% 0);
  -webkit-transition: -webkit-clip-path 400ms ease-in-out;
  transition: -webkit-clip-path 400ms ease-in-out;
  -o-transition: clip-path 400ms ease-in-out;
  transition: clip-path 400ms ease-in-out;
  transition: clip-path 400ms ease-in-out, -webkit-clip-path 400ms ease-in-out;
  display: grid;
  grid-template-rows: auto 1fr auto;
}
.header__main.open {
  -webkit-clip-path: circle(150% at 50% 50%);
          clip-path: circle(150% at 50% 50%);
}
.header__main-row {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  margin-bottom: 1.5em;
}
.header__main-logo {
  mix-blend-mode: screen;
}
.header__main-close {
  cursor: pointer;
  width: 2rem;
  height: 2rem;
}
.header__main-close:hover {
  opacity: 0.8;
}
.header__main-nav {
  width: 100%;
}
.header__icons-wrapper {
  justify-self: center;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  gap: 0 0.5em;
}
.header__icons-link:hover {
  opacity: 0.8;
}
.nav-header__list {
  width: 100%;
}
.nav-header__item {
  display: block;
  width: 100%;
  text-align: center;
  padding: 0.75em 0;
  border-top: 1px solid #9194a1;
  overflow: hidden;
}
.nav-header__item:not(:last-of-type):hover {
  opacity: 0.8;
}
.nav-header__link {
  color: white;
  font-size: 2rem;
  text-transform: uppercase;
}
.nav-header__link-btn {
  border: 2px solid currentColor;
  display: block;
  padding: 0.5em 0.3em;
  border-radius: 0.5em;
  position: relative;
  -webkit-transition: all 300ms ease-in-out;
  -o-transition: all 300ms ease-in-out;
  transition: all 300ms ease-in-out;
}
.nav-header__link-btn::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 0.5em;
  -webkit-clip-path: circle(0% at 100% 0);
          clip-path: circle(0% at 100% 0);
  background: white;
  z-index: -1;
  -webkit-transition: all 300ms ease-in-out;
  -o-transition: all 300ms ease-in-out;
  transition: all 300ms ease-in-out;
}
.nav-header__link-btn:hover {
  opacity: 0.8;
  color: #252b46;
}
.nav-header__link-btn:hover::before {
  -webkit-clip-path: circle(150% at 100% 0);
          clip-path: circle(150% at 100% 0);
}
.hero-section {
  padding: 3rem 0 5rem;
}
.hero-section__content {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: reverse;
      -ms-flex-direction: column-reverse;
          flex-direction: column-reverse;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  gap: 4.5rem 0;
}
.content-hero__left-col {
  text-align: center;
}
.content-hero__right-col {
  position: relative;
}
.content-hero__right-col::after {
  content: "";
  position: absolute;
  top: 22%;
  left: 20%;
  width: 100vw;
  height: 80%;
  background-color: #5368df;
  border-top-left-radius: 30%;
  border-bottom-left-radius: 30%;
  z-index: -1;
}
.content-hero__title {
  font-size: 3.2rem;
  line-height: 140%;
  margin-bottom: 0.8em;
}
.content-hero__text {
  color: #9194a1;
  margin-bottom: 2em;
}
