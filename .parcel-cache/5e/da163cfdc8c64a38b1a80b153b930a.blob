.container {
  max-width: 1200px;
  /* width: 90%;
  padding: 0 15px; */
  width: 88%;
  margin: 0 auto;
  overflow-x: hidden;
}
.btn-primary,
.btn-secondary {
  display: inline-block;
  padding: 0.8em;
  font-size: 1.8rem;
  line-height: 1;
  border-radius: 0.5rem;
  border: 1px solid transparent;
  -webkit-box-shadow: 2px 5px 7px rgba(83, 104, 223, 0.15), -2px 5px 7px rgba(83, 104, 223, 0.15);
          box-shadow: 2px 5px 7px rgba(83, 104, 223, 0.15), -2px 5px 7px rgba(83, 104, 223, 0.15);
  -webkit-transition: all 350ms ease-in-out;
  -o-transition: all 350ms ease-in-out;
  transition: all 350ms ease-in-out;
}
.btn-primary {
  color: white;
  background-color: #5368df;
}
.btn-primary:hover {
  border: 1px solid #5368df;
  background: transparent;
  color: #5368df;
}
.btn-secondary {
  color: #252b46;
}
.btn-secondary:hover {
  border: 1px solid #252b46;
  background: transparent;
  color: #252b46;
}