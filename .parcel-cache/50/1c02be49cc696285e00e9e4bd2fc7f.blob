/* $breakpoints: (
  $med: 600px,
  $lg: 900px,
  $xlg: 1200px,
); */
html {
  font-size: 10px;
}

body {
  background: #fff;
  margin: 0;
  font-family: "Rubik", sans-serif;
  font-size: 1.8rem;
}

*,
*::after,
*::before {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

img {
  max-width: 100%;
}

ul {
  list-style: none;
}

a {
  text-decoration: none;
}

button {
  cursor: pointer;
  border: none;
}

.header {
  padding: 3rem 0;
  position: relative;
}
.header__container {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.header__logo {
  flex: 0 0 45%;
}
.header__main {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20px;
  background: #252b46;
  z-index: 10;
  clip-path: circle(150% at 50% 50%);
  transition: clip-path 400ms ease-in-out;
  display: grid;
  grid-template-rows: auto 1fr auto;
}
.header__main.open {
  clip-path: circle(150% at 50% 50%);
}
.header__main-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5em;
}
.header__main-logo {
  background: #fff;
  mix-blend-mode: lighten;
}
.header__main-close {
  cursor: pointer;
  width: 2rem;
  height: 2rem;
}
.header__main-close:hover {
  opacity: 0.8;
}
.header__main-nav {
  width: 100%;
}
.header__icons-wrapper {
  justify-self: center;
}
.nav-header__list {
  width: 100%;
}
.nav-header__item {
  display: block;
  width: 100%;
  text-align: center;
  padding: 0.75em 0;
  border-top: 1px solid #9194a1;
}
.nav-header__item:hover {
  opacity: 0.8;
}
.nav-header__link {
  color: white;
  font-size: 2rem;
  text-transform: uppercase;
}
.nav-header__link-btn {
  border: 2px solid currentColor;
  display: block;
  padding: 0.5em 0.3em;
  border-radius: 2%;
}

.container {
  max-width: 1200px;
  width: 90%;
  padding: 0 15px;
  margin: 0 auto;
}
