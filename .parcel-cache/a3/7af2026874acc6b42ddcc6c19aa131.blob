html {
  font-size: 10px;
}

body {
  background: #fff;
  margin: 0;
  font-family: "Rubik", sans-serif;
  font-size: 1.8rem;
}

*,
*::after,
*::before {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

img {
  max-width: 100%;
}

ul {
  list-style: none;
}

a {
  text-decoration: none;
}

.header {
  padding: 3rem 0;
}
.header__container {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.header__logo {
  flex: 0 0 45%;
}
.container {
  max-width: 1200px;
  width: 90%;
  padding: 0 15px;
  margin: 0 auto;
}
